{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Ruff the whole project",
      "type": "shell",
      "command": "uv run ruff check --fix . && uv run ruff check --select I --fix . && uv run ruff format .",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": [],
      "windows": {
        "options": {
          "shell": {
            "executable": "cmd.exe",
            "args": [
              "/c"
            ]
          }
        }
      }
    },
    {
      "label": "run mypy checks",
      "type": "shell",
      "command": "uv run mypy .",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Coverage Report",
      "type": "shell",
      "command": "uv run coverage run --omit=tests/* -m pytest && uv run coverage run --omit=tests/* -a -m pytest -m docker && uv run coverage html && uv run coverage erase",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": [],
      "windows": {
        "options": {
          "shell": {
            "executable": "cmd.exe",
            "args": [
              "/c"
            ]
          }
        }
      }
    }
  ]
}